<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="OrderPaymentRetryProxyEP" xmlns="http://ws.apache.org/ns/synapse">
    <address statistics="enable" trace="enable" uri="http://localhost:8290/services/OrderPaymentRetryProxy">
        <timeout>
            <duration>60000</duration>
        </timeout>
        <suspendOnFailure>
            <errorCodes>-1</errorCodes>
            <initialDuration>0</initialDuration>
            <progressionFactor>1.00</progressionFactor>
            <maximumDuration>0</maximumDuration>
        </suspendOnFailure>
        <markForSuspension>
            <errorCodes>-1</errorCodes>
            <retriesBeforeSuspension>6</retriesBeforeSuspension>
            <retryDelay>1</retryDelay>
        </markForSuspension>
    </address>
</endpoint>
