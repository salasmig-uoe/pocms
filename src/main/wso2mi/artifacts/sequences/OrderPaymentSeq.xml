<?xml version="1.0" encoding="UTF-8"?>
<sequence name="OrderPaymentSeq" trace="disable" xmlns="http://ws.apache.org/ns/synapse">
    <log level="custom">
        <property name="LOG-PAYMENT-SEQUENCE" value="At start of OrderPaymentSeq"/>
    </log>
    <!-- Save the original payload -->
    <property expression="json-eval($)" name="origPayload" scope="default" type="STRING"/>
    <!-- Make the call request to an "external" endpoint -->
    <call>
        <endpoint key="MockoonEP"/>
    </call>    
    <switch source="get-property('axis2','HTTP_SC')">
        <case regex="200|201|202">
            <log level="custom">
                <property name="LOG-PAYMENT-SEQUENCE" value=" SUCCESSFULLY PROCESSED!!"/>
            </log>
        </case>
        <default>
            <!-- Reporting the errors in the logs -->
            <log category="ERROR" level="custom">
                <property expression="$ctx:ERROR_MESSAGE" name="message"/>
                <property expression="$ctx:ERROR_CODE" name="code"/>
                <property expression="$ctx:ERROR_DETAIL" name="detail"/>
                <property expression="$ctx:ERROR_EXCEPTION" name="exception"/>
            </log>
            <log level="custom">
                <property name="LOG-PAYMENT-SEQUENCE" value=" message delivered failed and sent to Error queue" />
            </log>
            <!-- Reconstructing the original payload making sure is only a json plain message -->
            <payloadFactory media-type="json">
                <format>$1</format>
                    <args>
                        <arg evaluator="xml" expression="get-property('origPayload')"/>
                    </args>
            </payloadFactory>
            <!-- Sending to the error message store -->
            <store description="OrderPayment Error Message Queue" messageStore="OrderPaymentErrorMQ"/>
            <!-- Ack for completion of the storage operation -->
            <property description="Generate 202 response from mediation flow" name="FORCE_SC_ACCEPTED" scope="axis2" type="STRING" value="true"/>
            <property name="HTTP_SC" scope="axis2" type="STRING" value="202"/>            
        </default>
    </switch>
    <log level="custom">
        <property name="At end of OrderPaymentSeq" value="true"/>
    </log>
    <respond/>  <!-- RESPOND REQUIRED with a successful code if processed or message was accepted and  sent to an error queue for later processing -->
</sequence>